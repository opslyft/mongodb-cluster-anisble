[Unit]
Description=High-performance, schema-free document-oriented database
After=network.target

[Service]
User=root
Type=forking
Restart=on-failure
LimitFSIZE=infinity
LimitCPU=infinity
LimitAS=infinity
LimitMEMLOCK=infinity
LimitNOFILE=64000
LimitNPROC=64000
ExecStart=/usr/bin/mongod --quiet --maxConns=60000 --config /etc/mongod-{{ inventory_hostname }}.conf

[Install]
WantedBy=multi-user.target